---
import { string } from "astro:schema";
import { Github, Linkedin, Mail, SquareArrowOutUpRight } from "lucide-react";

interface links {
  text: string,
  href: string
}

const currentYear = new Date().getFullYear();
const { name, email, github, linkedin, resume } = Astro.props;

const quickLinks: links[] = [
  { text: "About", href: "#about" },
  { text: "Projects", href: "#projects" },
  { text: "Experience", href: "#experience" },
  { text: "Resume", href: resume },
];
---

<footer class="bg-slate-900/10 border-t border-blue-500/20 w-full h-auto mt-20">
  <div class="max-w-6xl mx-auto py-5">
    <div class="grid grid-cols-3">
      <div class="space-y-5">
        <h1 class="text-2xl font-bold text-blue-500 my-5">Get in touch</h1>
        <p class="text-gray-500 text-sm">
          I'm always open to discussing new
          <br />
          opportunities and interesting projects.
        </p>
        <div class="flex flex-row items-center gap-2 hover:scale-102 transition">
          <Mail size={16} />
          <a href={'mailto:' + email}>luisccg2003@gmail.com</a>
        </div>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-blue-500 my-5">Quick links</h1>
        <ul class="space-y-2">
          {
            quickLinks.map((link) => (
              <li>
                <a class="text-gray-500 text-sm group" href={link.href}>
                  <span class="group-hover:scale:105 group-hover:text-white transition">
                    {link.text}
                  </span>
                  {link.text === "Resume" && (
                    <SquareArrowOutUpRight
                      size={16}
                      className="inline-block group-hover:scale:105 group-hover:text-white transition"
                    />
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-blue-500 my-5">Connect</h1>
        <div class="flex flex-row gap-5">
          <a
            href={github}
            class="size-12 border border-blue-500/20 rounded-full flex items-center justify-center hover:border-blue-500/60 hover:bg-blue-800/20 cursor-pointer transition-all duration-300"
            target="_blank"
            aria-label="GitHub"
          >
            <Github size={20} />
          </a>
          <a
            href={linkedin}
            class="size-12 border border-blue-500/20 rounded-full flex items-center justify-center hover:border-blue-500/60 hover:bg-blue-800/20 cursor-pointer transition-all duration-300"
            target="_blank"
            aria-label="Linkedin"
          >
            <Linkedin size={20} />
          </a>

          {/* TODO Make this right */}
          <a
            href={'mailto:' + email}
            class="size-12 border border-blue-500/20 rounded-full flex items-center justify-center hover:border-blue-500/60 hover:bg-blue-800/20 cursor-pointer transition-all duration-300"
            target="_blank"
            aria-label="Mail"
          >
            <Mail size={20} />
          </a>
        </div>
      </div>
    </div>

    <hr class="text-blue-500/20 my-10" />

    {/* Footer's footer ðŸ‘€ */}
    <div class="flex flex-row items-center justify-between">
      <code class="text-sm">
        <span class="text-blue-500">const</span>
        <span class="text-gray-500">developer = {'{'}</span> name: '{name}'
        <span class="text-gray-500">{'}'}</span>
      </code>
      <p class="text-sm text-gray-500">
        Â© {currentYear} {name}. Built with Astro, React & GSAP.
      </p>
    </div>

    <hr class="text-blue-500 my-10" />
  </div>
</footer>
